
<!-- macro library for boxes -->
<!-- $Id$ -->

<!-- context contain: object box from portal_boxes.getBoxes -->


<!-- a sample box title and body -->
<metal:block define-macro="box">
<div class="box">
  <div class="title">
    <metal:block define-slot="box_title">Box Title</metal:block>
  </div>
  <div class="body">
    <div class="content odd">
      <hr class="netscape4">
      <metal:block define-slot="box_body">Box Body</metal:block>
    </div>
  </div>
</metal:block>


<!-- ============================================================ -->
<!-- a min max box -->
<metal:block define-macro="mmbox">
<div class="box">
  <div class="title"
       tal:define="minimized box/settings/minimized; box_url box/url">
    <a href="" class="close" tal:condition="python:not isAnon and minimized"
      tal:attributes="href
      string:${base_url}${box_url}/maximize?goto=${context_url}"><img
      tal:replace="structure python:here.getImgTag('maximize.gif',
      base_url=base_url)"></a><a href="" class="close"
      tal:condition="python:not(isAnon or minimized)" tal:attributes="href
      string:${base_url}${box_url}/minimize?goto=${context_url}"><img
      tal:replace="structure python:here.getImgTag('minimize.gif',
      base_url=base_url)"></a>
    <metal:block define-slot="box_title">Box Title</metal:block>
  </div>
  <div class="body">
    <div class="content odd" tal:condition="not:box/settings/minimized">
      <hr class="netscape4">
      <metal:block define-slot="box_body">Box Body</metal:block>
    </div>
  </div>
</div>
</metal:block>


<!-- ============================================================ -->
<!-- a min max close box -->
<metal:block define-macro="mmcbox">
<div class="box">
  <div class="title"
       tal:define="minimized box/settings/minimized; box_url box/url">
    <a href="" class="close" tal:condition="not:isAnon"
      tal:attributes="href
      string:${base_url}${box_url}/close?goto=${context_url}"><img
      tal:replace="structure python:here.getImgTag('close.gif',
      base_url=base_url)"></a><a href="" class="close"
      tal:condition="python:not isAnon and minimized" tal:attributes="href
      string:${base_url}${box_url}/maximize?goto=${context_url}"><img 
      tal:replace="structure python:here.getImgTag('maximize.gif',
      base_url=base_url)"></a><a href="" class="close"
      tal:condition="python:not(isAnon or minimized)" tal:attributes="href
      string:${base_url}${box_url}/minimize?goto=${context_url}"><img
      tal:replace="structure python:here.getImgTag('minimize.gif',
      base_url=base_url)"></a>
    <metal:block define-slot="box_title">Box Title</metal:block>
  </div>
  <div class="body">
    <div class="content odd" tal:condition="not:box/settings/minimized">
      <hr class="netscape4">
      <metal:block define-slot="box_body">Box Body</metal:block>
    </div>
  </div>
</div>
</metal:block>


