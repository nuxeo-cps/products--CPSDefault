<?xml version="1.0"?>
<layout>
  <widget id="cluster_id" type="String Widget">
    <property name="display_width">36</property>
    <property name="fields">
     <element value="cluster_id" /></property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_document_cluster_id_label</property>
  </widget>
  <widget id="cluster_no_fallback" type="CheckBox Widget">
    <property name="fields">
     <element value="cluster_no_fallback" /></property>
    <property name="hidden_if_expr">not:context/cluster_id</property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_document_render_cluster_no_fallback_label</property>
  </widget>
  <widget id="context_rpath" type="String Widget">
    <property name="display_width">30</property>
    <property name="fields">
     <element value="context_rpath" /></property>
    <property name="hidden_if_expr">context/render_container</property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="hidden_readonly_layout_modes"></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_document_context_rpath_label</property>
    <property name="readonly_layout_modes"></property>
  </widget>
  <widget id="portlet" type="Generic Portlet Widget">
    <property name="fields">
     <element value="portlet" /></property>
    <property name="hidden_layout_modes">
     <element value="edit" /></property>
    <property name="hidden_readonly_layout_modes"></property>
    <property name="readonly_layout_modes"></property>
    <property name="render_method">widget_portlet_document</property>
  </widget>
  <widget id="render_container" type="CheckBox Widget">
    <property name="fields">
     <element value="render_container" /></property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_document_render_container_label</property>
  </widget>
  <table>
    <row>
      <cell id="portlet"/>
      <cell id="context_rpath"/>
      <cell id="render_container"/>
    </row>
    <row>
      <cell id="cluster_id"/>
      <cell id="cluster_no_fallback" ncols="2"/>
    </row>
  </table>
  <property name="layout_create_method"></property>
  <property name="layout_edit_method"></property>
  <property name="layout_view_method"></property>
  <property name="style_prefix">layout_portlet_</property>
  <property name="flexible_widgets"></property>
  <property name="validate_values_expr"></property>
</layout>
