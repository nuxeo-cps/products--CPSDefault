<?xml version="1.0"?>
<layout>
  <widget id="cluster_id" type="String Widget">
    <property name="fields">
     <element value="cluster_id" /></property>
    <property name="hidden_if_expr">not:context/render_items</property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_content_cluster_id_label</property>
  </widget>
  <widget id="contextual" type="Boolean Widget">
    <property name="fields">
     <element value="contextual" /></property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="hidden_readonly_layout_modes"></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_content_contextual_label</property>
    <property name="readonly_layout_modes"></property>
  </widget>
  <widget id="display_description" type="Boolean Widget">
    <property name="fields">
     <element value="display_description" /></property>
    <property name="hidden_if_expr">python: context.render_items or context.render_method</property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_common_display_description_label</property>
  </widget>
  <widget id="folder_path" type="String Widget">
    <property name="display_width">36</property>
    <property name="fields">
     <element value="folder_path" /></property>
    <property name="hidden_if_expr">context/contextual</property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_content_folder_path_label</property>
  </widget>
  <widget id="link_string" type="String Widget">
    <property name="display_width">36</property>
    <property name="fields">
     <element value="link_string" /></property>
    <property name="hidden_if_expr">context/render_method</property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_common_link_string_label</property>
  </widget>
  <widget id="max_items" type="Int Widget">
    <property name="fields">
     <element value="max_items" /></property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="is_i18n">True</property>
    <property name="is_limited">True</property>
    <property name="label_edit">cpsportlets_common_max_items_label</property>
    <property name="max_value">20.0</property>
    <property name="min_value">1.0</property>
  </widget>
  <widget id="max_words" type="Int Widget">
    <property name="fields">
     <element value="max_words" /></property>
    <property name="hidden_if_expr">python: context.render_items or context.render_method</property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_content_max_words_label</property>
  </widget>
  <widget id="portlet" type="Generic Portlet Widget">
    <property name="fields">
     <element value="portlet" /></property>
    <property name="hidden_layout_modes">
     <element value="edit" /></property>
    <property name="render_method">widget_portlet_content</property>
  </widget>
  <widget id="query_title" type="String Widget">
    <property name="display_width">36</property>
    <property name="fields">
     <element value="query_title" /></property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_content_query_title_label</property>
  </widget>
  <widget id="render_items" type="Boolean Widget">
    <property name="fields">
     <element value="render_items" /></property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_content_render_items_label</property>
  </widget>
  <widget id="render_method" type="String Widget">
    <property name="display_width">30</property>
    <property name="fields">
     <element value="render_method" /></property>
    <property name="hidden_if_expr">context/render_items</property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_common_render_method_label</property>
  </widget>
  <widget id="search_type" type="Select Widget">
    <property name="fields">
     <element value="search_type" /></property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_content_search_type_label</property>
    <property name="translated">True</property>
    <property name="vocabulary">cpsportlets_content_search_voc</property>
  </widget>
  <widget id="searchable_types" type="MultiSelect Widget">
    <property name="fields">
     <element value="searchable_types" /></property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_content_searchable_types_label</property>
    <property name="size">7</property>
    <property name="translated">True</property>
    <property name="vocabulary">cpsportlets_content_portal_types_voc</property>
  </widget>
  <widget id="short_syndication_formats"
          type="CheckBox Widget">
    <property name="fields">
     <element value="short_syndication_formats" /></property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_common_short_syndication_formats_label</property>
  </widget>
  <widget id="show_icons" type="Boolean Widget">
    <property name="fields">
     <element value="show_icons" /></property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="hidden_readonly_layout_modes"></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_content_show_icons_label</property>
    <property name="readonly_layout_modes"></property>
  </widget>
  <widget id="sort_on" type="Select Widget">
    <property name="fields">
     <element value="sort_on" /></property>
    <property name="hidden_if_expr">python: context.search_type in ['last_modified', 'upcoming']</property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_content_sort_on_label</property>
    <property name="translated">True</property>
    <property name="vocabulary">cpsportlets_content_sort_on_voc</property>
  </widget>
  <widget id="sort_reverse" type="Boolean Widget">
    <property name="fields">
     <element value="sort_reverse" /></property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_content_sort_reverse_label</property>
  </widget>
  <widget id="syndication_formats" type="MultiSelect Widget">
    <property name="fields">
     <element value="syndication_formats" /></property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_common_syndication_formats_label</property>
    <property name="translated">True</property>
    <property name="vocabulary">cpsportlets_syndication_formats_voc</property>
  </widget>
  <table>
    <row>
      <cell id="portlet" ncols="3"/>
    </row>
    <row>
      <cell id="render_items"/>
      <cell id="cluster_id"/>
      <cell id="render_method"/>
    </row>
    <row>
      <cell id="max_items" ncols="3"/>
    </row>
    <row>
      <cell id="search_type"/>
      <cell id="sort_on"/>
      <cell id="sort_reverse"/>
    </row>
    <row>
      <cell id="query_title" ncols="3"/>
    </row>
    <row>
      <cell id="folder_path"/>
      <cell id="contextual" ncols="2"/>
    </row>
    <row>
      <cell id="searchable_types" ncols="3"/>
    </row>
    <row>
      <cell id="show_icons" ncols="3"/>
    </row>
    <row>
      <cell id="display_description" ncols="2"/>
      <cell id="max_words"/>
    </row>
    <row>
      <cell id="link_string" ncols="3"/>
    </row>
    <row>
      <cell id="syndication_formats"/>
      <cell id="short_syndication_formats" ncols="2"/>
    </row>
  </table>
  <property name="layout_create_method"></property>
  <property name="layout_edit_method"></property>
  <property name="layout_view_method"></property>
  <property name="style_prefix">layout_portlet_</property>
  <property name="flexible_widgets"></property>
  <property name="validate_values_expr"></property>
</layout>
