<!--
XML exports macros

ATTENTION:
To be used this macro needs that a variable box be defined.
-->
<!-- $Id$ -->
<!-- ============================================================ -->
<metal:block define-macro="rss_atom_exports">
  <div class="xmlExports">
    <span class="rssExport">
      <a tal:attributes="href string:exportRSSContentBox?box_url=${box/url}"
        title="link_rss_export" i18n:attributes="title"
        i18n:translate="label_rss_export">RSS</a>
    </span>
    <span class="atomExport">
      <a tal:attributes="href string:exportATOMContentBox?box_url=${box/url}"
        title="link_atom_export" i18n:attributes="title"
        i18n:translate="label_atom_export">ATOM</a>
    </span>
  </div>
</metal:block>
