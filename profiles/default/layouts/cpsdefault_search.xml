<?xml version="1.0"?>
<layout>
  <widget id="Language" type="Search Language Widget">
    <property name="fields">
     <element value="Language" /></property>
    <property name="is_i18n">1</property>
    <property name="label_edit">label_language</property>
  </widget>
  <widget id="Subject" type="MultiSelect Widget">
    <property name="fields">
     <element value="Subject" /></property>
    <property name="is_i18n">1</property>
    <property name="label_edit">label_subject</property>
    <property name="size">4</property>
    <property name="translated">1</property>
    <property name="vocabulary">subject_voc</property>
  </widget>
  <widget id="ZCText" type="Search ZCText Widget">
    <property name="fields">
     <element value="SearchableText" />
     <element value="Title" />
     <element value="Description" /></property>
    <property name="is_i18n">1</property>
    <property name="label_edit">label_searchadv_full_text</property>
  </widget>
  <widget id="modified" type="Search Modified Widget">
    <property name="fields">
     <element value="modified" />
     <element value="modified_usage" /></property>
    <property name="is_i18n">1</property>
    <property name="label_edit">label_searchadv_updated</property>
  </widget>
  <widget id="path" type="Search Location Widget">
    <property name="fields">
     <element value="path" /></property>
    <property name="is_i18n">1</property>
    <property name="label_edit">label_search_location</property>
  </widget>
  <widget id="portal_type" type="MultiSelect Widget">
    <property name="fields">
     <element value="portal_type" /></property>
    <property name="is_i18n">1</property>
    <property name="label_edit">label_search_portal_type</property>
    <property name="size">4</property>
    <property name="vocabulary">search_portal_type</property>
  </widget>
  <widget id="review_state" type="Select Widget">
    <property name="fields">
     <element value="review_state" /></property>
    <property name="is_i18n">1</property>
    <property name="label_edit">label_search_status</property>
    <property name="vocabulary">search_review_state</property>
  </widget>
  <widget id="sort_by" type="Search Sort Widget">
    <property name="fields">
     <element value="sort-on" />
     <element value="sort-order" />
     <element value="sort-limit" /></property>
    <property name="is_i18n">1</property>
    <property name="label_edit">label_searchadv_sort_by</property>
  </widget>
  <table>
    <row>
      <cell id="ZCText" ncols="2"/>
    </row>
    <row>
      <cell id="Subject"/>
      <cell id="portal_type"/>
    </row>
    <row>
      <cell id="modified"/>
      <cell id="review_state"/>
    </row>
    <row>
      <cell id="path" ncols="2"/>
    </row>
    <row>
      <cell id="Language" ncols="2"/>
    </row>
    <row>
      <cell id="sort_by" ncols="2"/>
    </row>
  </table>
  <property name="layout_create_method"></property>
  <property name="layout_edit_method"></property>
  <property name="layout_view_method"></property>
  <property name="style_prefix">layout_default_</property>
  <property name="flexible_widgets"></property>
  <property name="validate_values_expr"></property>
</layout>
