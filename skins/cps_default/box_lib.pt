<!-- macro library for boxes -->
<!-- $Id$ -->

<!-- context contain: object box, box_id and settings -->
<!-- ============================================================ -->
<metal:block define-macro="box">
  <div class="box">
    <div class="title">
      <tal:block condition="box/settings/minimized"><a href="" tal:attributes="href string:${box/path}/maximize?goto=${context_url}"><img src="maximize.gif" tal:attributes="src string:${base_url}maximize.gif" /></a>&nbsp;</tal:block>
      <tal:block condition="not:box/settings/minimized"><a href="" tal:attributes="href string:${box/path}/minimize?goto=${context_url}"><img src="minimize.gif" tal:attributes="src string:${base_url}minimize.gif" />&nbsp;</a></tal:block>
      <div metal:define-slot="box_title">Box Title</div>
    </div>
    <div class="body">
      <div metal:define-slot="box_body">Box Body</div>
    </div>
  </div>
</metal:block>

<metal:block define-macro="sbox">
  <div class="box">
    <div class="body">
      <div metal:define-slot="box_body">Box Body</div>
    </div>
  </div>
</metal:block>

<metal:block define-macro="wbox">
  <div class="box">
    <div class="title"></div>
    <div class="body">
      <div metal:define-slot="box_title">Box Title</div>
      <div metal:define-slot="box_body">Box Body</div>
    </div>
  </div>
</metal:block>
