<tal:block define="dirtool here/portal_metadirectories;
        dirname request/dirname|nothing;
        directory dirtool/?dirname;
        dirtitle directory/title_or_id;
        mcat nocall:here/portal_messages;
        dummy python:request.set('breadcrumb_set',
          [{
            'url': here.portal_url()+'/directories',
            'title': '_str_Directories_'
            }, {
            'url': here.portal_url()+'/'+directory.search_template+'?dirname='+dirname,
            'title': dirtitle,
            }]);
        hideactions python:1
                ">

<html metal:use-macro="here/main_template/macros/master">
  <body>
    <metal:block fill-slot="header">
      <tal:block replace="python:mcat('_Search_in_(directory_name)_')">
        Search in
      </tal:block>
      «&nbsp;<span tal:replace="python:mcat(dirtitle)">Directory Name</span>&nbsp;»
    </metal:block>

    <metal:block fill-slot="header_plus"></metal:block>

    <metal:block fill-slot="main">
      <p tal:condition="directory/can_create">
        <tal:block replace="python:mcat('_(Create_an_entry)_in_this_directory_')">
          in this directory.</tal:block>
        <a href="."
          tal:attributes="href string:${directory/edit_template}?dirname=${dirname}&create=1"
          tal:content="python:mcat('_Create_an_entry_(in_this_directory)_')">
          Create an entry
        </a>
      </p>
      <form action="." tal:attributes="action here/directory_searchresults/absolute_url" method="POST">
        <input type="hidden" name="dirname" tal:attributes="value dirname" />
        <metal:block use-macro="here/directory_searchwidget/macros/dirsearch">
          Search form
        </metal:block>
      <input class="mainbutton" type="submit" tal:attributes="value python:mcat('_button_search_')">
      </form>
    </metal:block>
  </body>
</html>
</tal:block>
