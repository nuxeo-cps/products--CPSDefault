<?xml version="1.0"?>
<layout>
  <widget id="i18n" type="Boolean Widget">
    <property name="fields">
     <element value="i18n" /></property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">label_cpsportlets_i18n</property>
  </widget>
  <widget id="portlet" type="Generic Portlet Widget">
    <property name="fields">
     <element value="portlet" /></property>
    <property name="hidden_layout_modes">
     <element value="edit" /></property>
    <property name="render_method">widget_portlet_text</property>
  </widget>
  <widget id="text" type="Text Widget">
    <property name="configurable">format</property>
    <property name="fields">
     <element value="text" />
     <element value="text_format" />
     <element value="text_position" /></property>
    <property name="height">10</property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="render_format">html</property>
    <property name="size_max">0</property>
    <property name="width">50</property>
  </widget>
  <table>
    <row>
      <cell id="portlet" ncols="2"/>
    </row>
    <row>
      <cell id="text"/>
      <cell id="i18n"/>
    </row>
  </table>
  <property name="layout_create_method"></property>
  <property name="layout_edit_method"></property>
  <property name="layout_view_method"></property>
  <property name="style_prefix">layout_portlet_</property>
  <property name="flexible_widgets"></property>
  <property name="validate_values_expr"></property>
</layout>
