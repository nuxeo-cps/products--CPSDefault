<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="here/main_template/macros/master">
 
<div metal:fill-slot="header">&nbsp;</div>

<div metal:fill-slot="main">

 <div metal:define-macro="dayViewBox"
      class="dayViewBox"
      tal:define="DateTime python:modules['DateTime'].DateTime;
                  thisDay  python:DateTime(request.get('date', 
                                           DateTime().aCommon()[:12]))">

  <tal:block tal:define="items python:here.portal_calendar.getCPSEventsForThisDay(
                                      thisDay);
	                 format string:detail;">
    <metal:block use-macro="here/content_lib/macros/display_contents"/>
  </tal:block>
   
 </div>
</div>

</html>
