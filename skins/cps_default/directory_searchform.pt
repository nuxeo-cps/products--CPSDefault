<html tal:define="dtranslateirtool here/portal_metadirectories;
                  dirname request/dirname|nothing;
                  directory dirtool/?dirname;
                  showthirdcol nothing">
  <body metal:use-macro="here/main_template/macros/master">
    <metal:block fill-slot="title" i18n:translate="">
      Search in
      <span tal:replace="directory/title_or_id"
            i18n:name="directory_id">Directory title or id</span>
    </metal:block>
    <metal:block fill-slot="main">
      <a href="" tal:condition="directory/can_create"
         tal:attributes="href string:${directory/edit_template}?dirname=${dirname}&create=1"
         i18n:translate="create_directory_entry">
        Create an entry in this directory.
      </a>
      <form action="directory_searchresults" method="post">
        <input type="hidden" name="dirname" tal:attributes="value dirname">
        <metal:block use-macro="here/directory_searchwidget/macros/dirsearch">
          Search form
        </metal:block>
        <input class="mainbutton" type="submit" value="Search"
               i18n:attributes="value">
      </form>
    </metal:block>
  </body>
</html>
