<html tal:define="doc here/getContent">

<body metal:use-macro="here/main_template/macros/master">

<div metal:fill-slot="header">

  <span tal:replace="request/message"
     tal:condition="request/message|nothing"><hr></span>

  <h1 i18n:translate="">
    Edit
    <span tal:replace="here/getId" i18n:name="item_id">My ID</span>
  </h1>
    
</div>

<div metal:fill-slot="main">	  

  <form class="group" action="content_edit" method="post"
        tal:attributes="action string:${here/absolute_url}/content_edit">

    <span class="legend">contenu d'une hypothétique aide</span>

    <div class="row">
      <div class="label required" i18n:translate="item_title">
        Title
      </div>
      <div class="field">
        <input type="text" name="title:string" size="80"
               tal:attributes="value doc/Title">
      </div>
    </div>

    <div class="row">
      <div class="label" i18n:translate="item_description">
        Description
      </div>
      <div class="field">
        <textarea name="description:text" rows="4" cols="80" wrap="soft"
                  tal:content="doc/Description">
        </textarea>
      </div>
    </div>

    <div class="row">
      <div class="label" i18n:translate="item_body">
        Body
      </div>
      <div class="field">
        <textarea name="body:text" rows="10" cols="80" wrap="soft"
                  tal:content="doc/body">
        </textarea>
      </div>
    </div>

    <div class="row">
      <div class="label">
        &nbsp;
      </div>
      <div class="field">
        <input type="submit" name="change_and_edit" value=" Change " 
               i18n:attributes="value">
        <input type="submit" name="change_and_view" value=" Change and View " 
               i18n:attributes="value">
      </div>
    </div>

  </form>

</div>

</body>
</html>
