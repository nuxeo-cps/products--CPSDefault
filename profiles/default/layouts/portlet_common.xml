<?xml version="1.0"?>
<layout>
  <widget id="Description" type="TextArea Widget">
    <property name="fields">
     <element value="Description" /></property>
    <property name="height">2</property>
    <property name="hidden_if_expr">context/isGlobal</property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="hidden_readonly_layout_modes"></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">label_description</property>
    <property name="readonly_layout_modes"></property>
  </widget>
  <widget id="Title" type="String Widget">
    <property name="display_width">36</property>
    <property name="fields">
     <element value="Title" /></property>
    <property name="hidden_if_expr">context/isGlobal</property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="hidden_readonly_layout_modes"></property>
    <property name="is_i18n">True</property>
    <property name="is_required">True</property>
    <property name="label_edit">label_cpsportlets_title</property>
    <property name="readonly_layout_modes"></property>
    <property name="size_max">36</property>
  </widget>
  <widget id="disable_override" type="Boolean Widget">
    <property name="fields">
     <element value="disable_override" /></property>
    <property name="hidden_if_expr">context/isGlobal</property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="hidden_readonly_layout_modes"></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_common_disable_override_label</property>
    <property name="readonly_layout_modes"></property>
  </widget>
  <widget id="slot_override" type="Boolean Widget">
    <property name="fields">
     <element value="slot_override" /></property>
    <property name="hidden_if_expr">context/isGlobal</property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="hidden_readonly_layout_modes"></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_common_slot_override_label</property>
    <property name="readonly_layout_modes"></property>
  </widget>
  <widget id="visibility_range"
          type="CPS Portlet Visibility Widget">
    <property name="fields">
     <element value="visibility_range" /></property>
    <property name="hidden_if_expr">context/isGlobal</property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="hidden_readonly_layout_modes"></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_common_visibility_range_label</property>
    <property name="readonly_layout_modes"></property>
    <property name="translated">True</property>
    <property name="vocabulary">cpsportlets_visibility_range_voc</property>
  </widget>
  <table>
    <row>
      <cell id="Title" ncols="4"/>
    </row>
    <row>
      <cell id="Description" ncols="4"/>
    </row>
    <row>
      <cell id="visibility_range" ncols="4"/>
    </row>
    <row>
      <cell id="slot_override" ncols="3"/>
      <cell id="disable_override"/>
    </row>
  </table>
  <property name="layout_create_method"></property>
  <property name="layout_edit_method"></property>
  <property name="layout_view_method"></property>
  <property name="style_prefix">layout_portlet_</property>
  <property name="flexible_widgets"></property>
  <property name="validate_values_expr"></property>
</layout>
