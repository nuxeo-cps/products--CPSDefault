<html tal:define="showthirdcol nothing;
                 dummy python:request.set('breadcrumb_set',
                   [{
                   'id' : 'portal_root', 
                   'url': here.portal_url(),
                   'title': 'Portal', 
                   'longtitle':'Portal',
                   },
                   {
                   'id' : 'search_form', 
                   'url': here.portal_url()+'/advanced_search_form',
                   'title': 'Advanced search', 
                   'longtitle':'Advanced search',
                   }, ]);
                 ">
  <body metal:use-macro="here/main_template/macros/master">
    <div metal:fill-slot="main">

      <table width="100%" border="0" cellspacing="0" cellpadding="1" bgcolor="#666666">
        <tr>
          <td>
            <table width="100%" border="0" cellspacing="0"
                   cellpadding="0" bgcolor="#FFFFFF">
              <tr>
                <td width="15%" bgcolor="#DEE7EC" align="middle"
                    i18n:translate="Advanced search">Recherche avancée</td>
                <td width="5%">&nbsp;</td>
                <td width="80%" valign="top" align="left">
                  <span i18n:translate="advanced search explication">Explication ...</span>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
      <br/>

      <table width="100%" border="0" cellspacing="0" cellpadding="1" bgcolor="#666666"><tr><td>
            <table width="100%" border="0" cellspacing="0" cellpadding="0" bgcolor="#FFFFFF">
              <tr><td width="4%">&nbsp;</td><td width="92%">
                  <br>
                    <form action="search" 
                          tal:attributes="action string:${base_url}search_form">

                      <table class="FormLayout">

                        <tr>
                          <td i18n:translate="Title">Titre</td>
                          <td><input name="Title" size="20"></td>
                        </tr>

                        <tr>
                          <td i18n:translate="Description">Description</td>
                          <td><input name="Description" size="20"></td>
                        </tr>

                        <tr valign="top">
                          <td i18n:translate="Plain text"> Plein texte</td>
                          <td><input name="SearchableText" size="40"></td>
                        </tr>

                        <tr tal:condition="python: here.portal_membership.checkPermission('Review portal content', here)">
                          <td i18n:translate="Status">Statut</td>
                          <td>
                            <select name="review_state">
                              <option value="" selected
                                      i18n:translate="-- All --">-- Tous --
                              </option>
                              <option value="work"
                                      i18n:translate="work">work
                              </option>
                              <option value="pending"
                                      i18n:translate="pending">pending
                              </option>
                              <option value="published"
                                      i18n:translate="published">published
                              </option>
                            </select>
                          </td>
                        </tr>

                        <tr>
                          <td i18n:translate="Modify since"> Modifié depuis</td>
                          <td tal:define="today python: here.ZopeTime().earliestTime();
                                          mtool here/portal_membership;
                                          member python:mtool.getAuthenticatedMember();
                                          lastLogin member/last_login_time|nothing;
                                          yesterday python:(today-1).Date();
                                          lastWeek python:(today-7).Date();
                                          lastMth python:(today-31).Date();">
                            <select name="modified:date">
                              <option value="1970/01/01 00:00:00 GMT"
                                      i18n:translate="Choose">Choisir
                              </option>
                              <option value=""
                                      tal:condition="python:not(here.portal_membership.isAnonymousUser())"
                                      tal:attributes="value lastLogin"
                                      i18n:translate="last login">dernier login
                              </option>
                              <option value=""
                                      tal:attributes="value yesterday"
                                      i18n:translate="yesterday">hier</option>
                              <option value=""
                                      tal:attributes="value lastWeek"
                                      i18n:translate="last week">la semaine dernière
                              </option>
                              <option value=""
                                      tal:attributes="value lastMth"
                                      i18n:translate="last month">le dernier mois
                              </option>
                            </select>
                            <input type="hidden" name="modified_usage"
                                   value="range:min" />
                          </td>
                        </tr>
                        <tr>
                          <td><br></td>
                          <td><br><input type="submit" value="Search"
                                         i18n:attributes="value"></td>
                        </tr>
                      </table>
                    </form>

                    <br/>
                </td>
                <td width="4%">&nbsp;</td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </div>
  </body>
</html>
