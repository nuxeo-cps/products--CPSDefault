<metal:block define-macro="actionbox_user">
  <metal:block use-macro="here/boxes_nuxeo/macros/actionbox_default">
    <metal:block fill-slot="box_title">
      <span tal:condition="isAnon"
            i18n:translate="label_guest">
        Guest
      </span>
      <a href="." accesskey="H"
         tal:define="directory here/portal_directories/members;
                     entry python:not isAnon and directory.getEntry(uname)"
         tal:condition="not:isAnon"
         tal:content="python:entry and entry.get('fullname', uname) or uname"
         tal:attributes="href string:${base_url}workspaces/members/${uname}/view"
         tal:omit-tag="not:entry">
        box text title
      </a>
    </metal:block>
  </metal:block>
</metal:block>

