<html>
 <body>

<table>
 <thead><tr><th>Type Headline</th></tr></thead>
 <tbody><tr><td tal:define="info python:{
      Title: 'Hello', Description:'hello is a common word used to welcome someone', 'number':'0'
    };" tal:content="info">
 </td></tr></tbody>
</table>

<metal:block define-macro="type_headline">
 <table><tr><td style="vertical-align:top;">
   <input type="radio" name="type_name" 
          value="" id="" 
          tal:condition="info/selectable"
          tal:attributes="value info/id; id string:cb_${info/number}" />
  </td><td style="vertical-align:top;">
    <label for="" 
           tal:attributes="for string:cb_${info/Title}"
           tal:content="info/Title" />
    <div align="left" 
         class="ListDefinition" 
         tal:content="info/Description"/>
  </td></tr></table>
</metal:block>

 </body>
</html>
