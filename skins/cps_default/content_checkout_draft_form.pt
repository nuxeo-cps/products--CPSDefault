<metal:html use-macro="here/content_lib_master/macros/master">

<metal:block fill-slot="header" />

<metal:main fill-slot="main">
<metal:std_main use-macro="here/content_lib_std_main/macros/std_main">

<metal:title fill-slot="title" i18n:translate="">
  heading_checkout_draft_of
  <span tal:replace="here/title_or_id" i18n:name="item_id">Item</span>
</metal:title>

<metal:help fill-slot="help">
  <span i18n:translate="help_checkout_draft">
    If you create a draft, you will be the only one able to work on the document.
  </span>
</metal:help>

<metal:main fill-slot="main">
  <form class="workflow" action="." method="post"
    tal:attributes="action string:${here_url}/content_checkout_draft;
    onsubmit python:'return validateRequiredFields([\'comment\'], [\'%s\'], \'%s\')'
                     % (cpsmcat('transition_comments'), cpsmcat('description_field_required'))
    ">
    <dl>
      <dt><label class="required" for="comment" i18n:translate="transition_comments">Comments</label></dt>
      <dd>
        <textarea name="comment" id="comment" cols="60" rows="5"
                  tal:content="nothing">
        </textarea>
      </dd>
    </dl>
    <p>
      <input type="submit" class="standalone" value="button_checkout_draft"
        i18n:attributes="value" />
      <input type="button" class="context" onClick="history.back()"
        value="button_cancel" i18n:attributes="value" />
    </p>
  </form>
</metal:main>

</metal:std_main>
</metal:main>
</metal:html>
