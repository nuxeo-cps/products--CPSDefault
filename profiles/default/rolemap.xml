<?xml version="1.0"?>
<rolemap>
  <roles>
    <role name="Anonymous"/>
    <role name="Authenticated"/>
    <role name="Contributor"/>
    <role name="ForumModerator"/>
    <role name="ForumPoster"/>
    <role name="Manager"/>
    <role name="Member"/>
    <role name="Owner"/>
    <role name="Reader"/>
    <role name="Reviewer"/>
    <role name="SectionManager"/>
    <role name="SectionReader"/>
    <role name="SectionReviewer"/>
    <role name="ThemeManager"/>
    <role name="WorkspaceManager"/>
    <role name="WorkspaceMember"/>
    <role name="WorkspaceReader"/>
  </roles>
  <permissions>
    <permission name="Access future portal content"
                acquire="True">
      <role name="Reviewer"/>
      <role name="Manager"/>
    </permission>
    <permission name="Add portal content" acquire="True">
      <role name="Owner"/>
      <role name="Manager"/>
    </permission>
    <permission name="Add portal folders" acquire="True">
      <role name="Owner"/>
      <role name="Manager"/>
    </permission>
    <permission name="Delete objects" acquire="True">
      <role name="Owner"/>
      <role name="Manager"/>
    </permission>
    <permission name="FTP access" acquire="True">
      <role name="Owner"/>
      <role name="Manager"/>
    </permission>
    <permission name="Forum Moderate" acquire="False">
      <role name="Manager"/>
      <role name="Owner"/>
      <role name="WorkspaceManager"/>
      <role name="ForumModerator"/>
      <role name="SectionManager"/>
      <role name="SectionReviewer"/>
    </permission>
    <permission name="Forum Post" acquire="False">
      <role name="Manager"/>
      <role name="Owner"/>
      <role name="Member"/>
      <role name="WorkspaceManager"/>
      <role name="WorkspaceMember"/>
      <role name="WorkspaceReader"/>
      <role name="ForumPoster"/>
      <role name="SectionManager"/>
      <role name="SectionReviewer"/>
      <role name="SectionReader"/>
    </permission>
    <permission name="Forum manage comments" acquire="False">
      <role name="Manager"/>
      <role name="Owner"/>
      <role name="WorkspaceManager"/>
      <role name="SectionManager"/>
      <role name="SectionReviewer"/>
    </permission>
    <permission name="List portal members" acquire="True">
      <role name="Member"/>
      <role name="Manager"/>
    </permission>
    <permission name="List undoable changes" acquire="True">
      <role name="Member"/>
      <role name="Manager"/>
    </permission>
    <permission name="Manage Portlets" acquire="False">
      <role name="Manager"/>
      <role name="Owner"/>
    </permission>
    <permission name="Manage properties" acquire="True">
      <role name="Owner"/>
      <role name="Manager"/>
    </permission>
    <permission name="Reply to item" acquire="True">
      <role name="Member"/>
      <role name="Manager"/>
    </permission>
    <permission name="Review portal content" acquire="True">
      <role name="Reviewer"/>
      <role name="Manager"/>
    </permission>
    <permission name="Set own password" acquire="True">
      <role name="Member"/>
      <role name="Manager"/>
    </permission>
    <permission name="Set own properties" acquire="True">
      <role name="Member"/>
      <role name="Manager"/>
    </permission>
    <permission name="Undo changes" acquire="True">
      <role name="Owner"/>
      <role name="Manager"/>
    </permission>
    <permission name="Use external editor" acquire="False">
      <role name="Manager"/>
      <role name="Member"/>
    </permission>
    <permission name="View management screens"
                acquire="True">
      <role name="Owner"/>
      <role name="Manager"/>
    </permission>
  </permissions>
</rolemap>
