<html metal:use-macro="here/main_template/macros/master" >
<body>

<div metal:fill-slot="header" />

<div metal:fill-slot="main">

<div class="Desktop">
<h1 i18n:translate="heading_box_create_form">Add a Box</h1>
<form action="box_create" method="POST"
tal:attributes="action string:${here_url}/box_create">
<table class="FormLayout" summary="layout">
  <tr>
    <td>
      <table width="100%" class="FormLayout" summary="listing of box types"
             tal:repeat="item here/getBoxFTI">
        <tbody>
        <tr valign="top">
          <td align="left" width="2%" nowrap="nowrap">
            <input type="radio" name="type_name" value="" id=""
            class="noborder" tal:attributes="value item/getId;
            checked python:test(repeat['item'].start, '1', default);
            id string:cb_${repeat/item/number}" />
          </td>
          <th align="left" colspan="2" class="ListName">
            <label for="" tal:attributes="for string:cb_${repeat/item/number}"
            tal:content="item/Title"
            i18n:translate="">
            Portal type's title
            </label>
          </th>
        </tr>
        <tr valign="top">
          <td colspan="2"><br /></td>
          <td align="left" class="ListDefinition" tal:content="item/Description"
            i18n:translate="">
            Portal type's description
          </td>
        </tr>
        </tbody>
      </table>
    </td>
  </tr>
</table>
<table class="FormLayout" summary="title form layout">
  <tr valign="top">
    <td><br /></td>
    <td colspan="2" class="TextField">
      <strong i18n:translate="label_title">Title:</strong>
      <input type="text" name="title" size="20" />
      <input type="submit" class="standalone searchButton" value="button_add"
        i18n:attributes="value" />
    </td>
  </tr>
</table>
</form>
</div>
</div>

</body>
</html>
