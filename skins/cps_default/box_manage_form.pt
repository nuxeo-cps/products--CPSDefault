<metal:html use-macro="here/main_template/macros/master">

<metal:main fill-slot="main"
  tal:define="context_urlc python:here.getContextUrl(utool=utool, concat=1);">

<h2 i18n:translate="box_manage_title">Box management</h2>

Current location: <tal:block replace="context_url" />


<form action="box_manage" method="post"
  tal:attributes="action string:${context_urlc}/box_manage">
  

<table>
  
  <tal:block repeat="box boxes">
  <tr tal:define="action python:box['box'].getTypeInfo().immediate_view">
    <td><tal:block replace="box/box/slot" /></td>
    <td><tal:block replace="box/box/order" /></td>
    <td><tal:block replace="box/box/title" /></td>
    <td><tal:block replace="box/box/macro" /></td>
    <td><a href=""
          tal:attributes="href string:${context_urlc}/${action}?box_url=${box/path}"><tal:block replace="box/path" /></a></td>
  </tr>
  </tal:block>
</table>
  <a href="box_create_form" tal:attributes="href string:${context_urlc}/box_create_form">Add a new Box</a>
</form>


</metal:main>

</metal:html>