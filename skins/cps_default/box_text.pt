<metal:block define-macro="box_text">
  <metal:block use-macro="here/generic_lib/macros/box">
    <metal:block fill-slot="box_title" i18n:translate=""
      tal:content="here/title">
       box text title
    </metal:block>
    <metal:block fill-slot="box_body">
      <div class="content odd"
           tal:content="here/text">
        box text body
      </div>
    </metal:block>
  </metal:block>
</metal:block>


