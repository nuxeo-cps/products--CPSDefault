<?xml version="1.0"?>
<layout>
  <widget id="display" type="Select Widget">
    <property name="fields">
     <element value="display" /></property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="hidden_readonly_layout_modes"></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_display_mode_label</property>
    <property name="readonly_layout_modes"></property>
    <property name="translated">True</property>
    <property name="vocabulary">cpsportlets_bcs_display_voc</property>
  </widget>
  <widget id="display_hidden_folders" type="Boolean Widget">
    <property name="fields">
     <element value="display_hidden_folders" /></property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="hidden_readonly_layout_modes"></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_display_hidden_folders_label</property>
    <property name="readonly_layout_modes"></property>
  </widget>
  <widget id="display_site_root" type="Boolean Widget">
    <property name="fields">
     <element value="display_site_root" /></property>
    <property name="hidden_if_expr">python: context.first_item &lt;= 0</property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_bcs_display_site_root_label</property>
  </widget>
  <widget id="first_item" type="Int Widget">
    <property name="fields">
     <element value="first_item" /></property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="hidden_readonly_layout_modes"></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_common_first_item_label</property>
    <property name="readonly_layout_modes"></property>
  </widget>
  <widget id="highlight_last_item" type="Boolean Widget">
    <property name="fields">
     <element value="highlight_last_item" /></property>
    <property name="hidden_if_expr">python: context.display in ['dropdown_list']</property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_bcs_highlight_last_item_label</property>
  </widget>
  <widget id="portlet" type="Generic Portlet Widget">
    <property name="fields">
     <element value="portlet" /></property>
    <property name="hidden_layout_modes">
     <element value="edit" /></property>
    <property name="hidden_readonly_layout_modes"></property>
    <property name="readonly_layout_modes"></property>
    <property name="render_method">widget_portlet_breadcrumbs</property>
  </widget>
  <table>
    <row>
      <cell id="portlet" ncols="3"/>
    </row>
    <row>
      <cell id="display" ncols="3"/>
    </row>
    <row>
      <cell id="first_item"/>
      <cell id="display_site_root"/>
      <cell id="highlight_last_item"/>
    </row>
    <row>
      <cell id="display_hidden_folders" ncols="3"/>
    </row>
  </table>
  <property name="layout_create_method"></property>
  <property name="layout_edit_method"></property>
  <property name="layout_view_method"></property>
  <property name="style_prefix">layout_portlet_</property>
  <property name="flexible_widgets"></property>
  <property name="validate_values_expr"></property>
</layout>
