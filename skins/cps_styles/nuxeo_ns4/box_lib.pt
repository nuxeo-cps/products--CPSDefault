<!-- macro library for boxes -->
<!-- $Id$ -->
<!-- this a sample box_lib using table instead of pure div -->


<!-- a sample box title and body -->
<metal:block define-macro="box">
<div class="box">
<table class="box" width="100%" cellpadding="5" cellspacing="0" valign="top"
  border="1">
  <tr class="title">
    <td><b><font color="white" >
      <metal:block define-slot="box_title">Box Title</metal:block>
      </font></b>
    </td>
  </tr>
  <tr class="odd">
    <td>
      <metal:block define-slot="box_body">Box Body</metal:block>
    </td>
  </tr>
</table>
</div>
</metal:block>


<!-- ============================================================ -->
<!-- a min max box -->
<metal:block define-macro="mmbox">
<div class="box">
<table class="box" width="100%" border="1" cellspacing="0" cellpadding="5"
  valign="top">
  <tr class="title">
    <td>
    <tal:block condition="box/settings/minimized"><a href="" class="close"
      tal:attributes="href
      string:${base_url}${box/url}/maximize?goto=${context_url}"><img border="0"
      src="maximize.gif" tal:attributes="src string:${base_url}maximize.gif"
      /></a></tal:block><tal:block
      condition="not:box/settings/minimized"><a href="" class="close"
      tal:attributes="href
      string:${base_url}${box/url}/minimize?goto=${context_url}"><img border="0"
      src="minimize.gif" tal:attributes="src string:${base_url}minimize.gif"
      /></a></tal:block>
      <b><font color="white">
      <metal:block define-slot="box_title">Box Title</metal:block>
      </font></b>
    </td>
  </tr>
  <tr tal:condition="not:box/settings/minimized" class="odd">
    <td>
      <metal:block define-slot="box_body">Box Body</metal:block>
    </td>
  </tr>
</table>
</div>
</metal:block>


<!-- ============================================================ -->
<!-- a min max close box -->
<metal:block define-macro="mmcbox">
<div class="box">
<table class="box" width="100%" border="1" cellspacing="0" cellpadding="5"
  valign="top">
  <tr class="title">
    <td>
      <a href="" class="close" tal:attributes="href
      string:${base_url}${box/url}/close?goto=${context_url}"><img border="0"
      src="close.gif" tal:attributes="src string:${base_url}close.gif" /></a>
    <tal:block condition="box/settings/minimized"><a href="" class="close"
      tal:attributes="href
      string:${base_url}${box/url}/maximize?goto=${context_url}"><img border="0"
      src="maximize.gif" tal:attributes="src string:${base_url}maximize.gif"
      /></a></tal:block><tal:block condition="not:box/settings/minimized"><a
      href="" class="close" tal:attributes="href
      string:${base_url}${box/url}/minimize?goto=${context_url}"><img border="0"
      src="minimize.gif" tal:attributes="src string:${base_url}minimize.gif"
      /></a></tal:block>
      <b><font color="white">
    <metal:block define-slot="box_title">Box Title</metal:block>
      </font></b>
    </td>
  </tr>
  <tr tal:condition="not:box/settings/minimized" class="odd">
    <td>
      <metal:block define-slot="box_body">Box Body</metal:block>
    </td>
  </tr>
</table>
</div>
</metal:block>


<!-- ============================================================ -->
<!-- a frame box -->
<metal:block define-macro="sbox">
<div class="box">
<table class="box" width="100%" border="1" cellspacing="0" cellpadding="5"
  valign="top">
  <tr class="odd"><td>
    <div class="title2"><metal:block define-slot="box_title">Box Title</metal:block></div>
    <hr class="netscape4">
    <metal:block define-slot="box_body">Box Body</metal:block>
  </td></tr>
</table>
</div>
</metal:block>


