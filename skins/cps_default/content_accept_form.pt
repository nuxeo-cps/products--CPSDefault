<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="here/content_lib/macros/master">

<metal:block fill-slot="title">
  <span i18n:translate="">Accept publication
    <span tal:replace="here/getId" i18n:name="objectid"> Item</span>
  </span>
</metal:block>

<metal:block fill-slot="help">
  <span i18n:translate="">Accept publication of this item, this will make it available to section's readers</span>
</metal:block>

<div metal:fill-slot="main">
  <br/>
  <metal:block use-macro="here/content_lib/macros/status" /><br/><br/>
 
  <metal:block use-macro="here/content_lib/macros/transition_form">

    <metal:block fill-slot="button" i18n:domain="cmf_default">
      <input type="hidden" name="workflow_action" value="accept" />
      <input type="submit" value="Publish as new item" i18n:attributes="value" />
      <input type="submit" value="Publish as update" i18n:attributes="value" />
      <input type="button" onClick="history.back()" value="Cancel" />
    </metal:block>

  </metal:block>

  <metal:block use-macro="here/content_lib/macros/states" /><br/>

  <metal:block use-macro="here/content_lib/macros/history" />

</div>

</html>