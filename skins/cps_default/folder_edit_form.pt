<metal:html>
<metal:body use-macro="here/content_lib/macros/master">
<metal:header fill-slot="header">
  <h2 i18n:translate="">heading_edit
    <span tal:replace="here/getId" i18n:name="item_id">My ID</span></h2>
</metal:header>

<metal:main fill-slot="main">
  <form action="content_edit" method="post"
        tal:attributes="action string:${here_url}/content_edit">
    <table class="FormLayout">
      <tr valign="top">
        <th align="right" i18n:translate="label_title">Title</th>
        <td colspan="3">
          <input id="field_focus" type="text" name="title" value="" size="50"
                 tal:attributes="value doc/Title">
        </td>
      </tr>

      <tr valign="top">
        <th align="right">Description</th>
        <td colspan="3">
          <textarea name="description:text" rows="5" cols="65" wrap="soft"
                    tal:content="doc/Description">
          </textarea>
        </td>
      </tr>

       <tr valign="top">
        <th align="right" i18n:translate="label_custom_css">Custom CSS</th>
        <td colspan="3">
          <input id="custom_css" type="text" name="cps_custom_css"
                 value="" size="50"
                 tal:attributes="value here/cps_custom_css|nothing">
        </td>
      </tr>

      <tr valign="top">
        <td><br></td>
        <td>
          <input type="submit" class="standalone" name="change_and_edit"
            value="button_change_and_edit" i18n:attributes="value">
          <input type="submit" class="standalone" name="change_and_view"
            value="button_change_and_view" i18n:attributes="value">
        </td>
      </tr>
    </table>
  </form>
 </metal:main>
</metal:body>
</metal:html>
