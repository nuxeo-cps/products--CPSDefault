<?xml version="1.0"?>
<layout>
  <widget id="advanced_search_link" type="CheckBox Widget">
    <property name="fields">
     <element value="advanced_search_link" /></property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="hidden_readonly_layout_modes"></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_advanced_search_link_label</property>
    <property name="readonly_layout_modes"></property>
  </widget>
  <widget id="context_is_portlet" type="CheckBox Widget">
    <property name="fields">
     <element value="context_is_portlet" /></property>
    <property name="hidden_if_expr">not:context/contextual_search_choice</property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="hidden_readonly_layout_modes"></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_search_context_is_portlet_label</property>
    <property name="readonly_layout_modes"></property>
  </widget>
  <widget id="contextual_search_choice"
          type="CheckBox Widget">
    <property name="fields">
     <element value="contextual_search_choice" /></property>
    <property name="hidden_if_expr">python: not context.getSearchFormParams()['contextual']</property>
    <property name="hidden_layout_modes">
     <element value="view" /></property>
    <property name="hidden_readonly_layout_modes"></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_contextual_search_choice_label</property>
    <property name="readonly_layout_modes"></property>
  </widget>
  <widget id="search" type="Generic Portlet Widget">
    <property name="fields">
     <element value="dummy" /></property>
    <property name="hidden_layout_modes">
     <element value="edit" /></property>
    <property name="hidden_readonly_layout_modes"></property>
    <property name="readonly_layout_modes"></property>
    <property name="render_method">widget_portlet_search</property>
  </widget>
  <table>
    <row>
      <cell id="search"/>
    </row>
    <row>
      <cell id="contextual_search_choice"/>
    </row>
    <row>
      <cell id="context_is_portlet"/>
    </row>
    <row>
      <cell id="advanced_search_link"/>
    </row>
  </table>
  <property name="layout_create_method"></property>
  <property name="layout_edit_method"></property>
  <property name="layout_view_method"></property>
  <property name="style_prefix">layout_portlet_</property>
  <property name="flexible_widgets"></property>
  <property name="validate_values_expr"></property>
</layout>
