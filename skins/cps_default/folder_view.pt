<metal:block use-macro="here/main_template/macros/master">
<div metal:fill-slot="main"
     tal:define="list_here python:checkPerm('List folder contents', here);">

<div tal:define="response request/RESPONSE;
                 url here/absolute_url"
  tal:condition="not: list_here">
  <span tal:define="redirect python: response.redirect(url)"></span>
</div>

<b tal:replace="python:CPSD_bmt_mark('FOLDER_VIEW_boxes_start')" />
<tal:block repeat="box python:btool.filterBoxes(boxes, slot='folder_view')">
  <metal:block use-macro="python:path(box['macro'])" /><br/>
</tal:block>
<b tal:replace="python:CPSD_bmt_mark('FOLDER_VIEW_boxes_stop')" />

</div>
</metal:block>
