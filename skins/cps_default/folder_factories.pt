<html metal:use-macro="here/content_lib/macros/master">
<body>

  <div tal:condition="python: not(checkPerm('Access contents information', here))">
    <span tal:define="dummy here/unauthRedirect"></span>
  </div>

  <h1 metal:fill-slot="header" i18n:translate="heading_folder_factories">
    Add Content
  </h1>
  <div metal:fill-slot="main">
    <form action="content_create" method="POST"
          tal:attributes="action string:${here_url}/content_create">
      <table width="100%" border="0" cellpadding="1" cellspacing="1">
        <tbody>
        <tal:block tal:repeat="item here/getSortedContentTypes">
          <tr valign="top">
            <td align="left" width="20">
              <input type="radio" name="type_name" value="" id=""
                     class="noborder"
                     tal:attributes="value item/getId;
                                     checked repeat/item/start;
                                     id string:cb_${repeat/item/number}">
            </td>
            <td align="left" width="20">
              <label for=""
                     tal:attributes="for string:cb_${repeat/item/number}">
              <img tal:replace="structure python:here.getImgTag(item.getIcon(),
                                                            base_url=base_url)">
              </label>
            </td>
            <th align="left">
              <label for="" tal:attributes="for string:cb_${repeat/item/number}"
                     tal:content="item/Title"
                     i18n:translate="">
                Portal type's title
              </label>
            </th>
          </tr>
          <tr valign="top">
            <td colspan="2">&nbsp;</td>
            <td align="left" class="description" tal:content="item/Description"
                i18n:translate="">
              Portal type's description
            </td>
          </tr>
        </tal:block>
        </tbody>
      </table>
      <br>
      <table border="0" width="100%" cellpadding="1" cellspacing="1">
        <tr valign="top">
          <td width="20">&nbsp;</td>
          <td>
            <strong i18n:translate="label_title">Title:</strong>
            <input type="text" name="title" size="40">
            <input type="submit" class="standalone searchButton"
                   value="button_add" i18n:attributes="value">
          </td>
        </tr>
      </table>
    </form>
  </div>

</body>
</html>
