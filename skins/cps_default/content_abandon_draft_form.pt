<metal:html use-macro="here/content_lib/macros/master">

<metal:block fill-slot="header" />

<metal:main fill-slot="main">
<metal:std_main use-macro="here/content_lib/macros/std_main">

<metal:title fill-slot="title" i18n:translate="">
  heading_abandon_draft_of
  <span tal:replace="here/title_or_id" i18n:name="item_id">Item</span>
</metal:title>

<metal:help fill-slot="help">
  <span i18n:translate="help_abandon_draft">
    If you abandon this draft, the original document will be unlocked.
  </span>
</metal:help>

<metal:main fill-slot="main">
  <form action="." method="POST"
    tal:attributes="action string:${here_url}/content_abandon_draft">

    <p>
      <strong><em i18n:translate="transition_comments">Commentaires</em></strong><br>
      <textarea name="comment" cols="60" rows="5" wrap="soft" style="width: 100%"
                tal:content="nothing">
      </textarea>
    </p>

    <input type="submit" class="standalone" value="button_abandon_draft"
      i18n:attributes="value">
    <input type="button" class="context" onClick="history.back()"
      value="button_cancel" i18n:attributes="value">
  </form>
</metal:main>

</metal:std_main>
</metal:main>
</metal:html>
