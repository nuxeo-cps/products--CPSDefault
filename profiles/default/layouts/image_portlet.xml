<?xml version="1.0"?>
<layout>
  <widget id="caption" type="String Widget">
    <property name="display_width">36</property>
    <property name="fields">
     <element value="caption" /></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_image_caption_label</property>
  </widget>
  <widget id="image" type="Image Widget">
    <property name="fields">
     <element value="image" /></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_image_image_label</property>
  </widget>
  <widget id="imagelink" type="Image Link Widget">
    <property name="fields">
     <element value="image" />
     <element value="link" />
     <element value="caption" /></property>
    <property name="widget_ids">
     <element value="image" />
     <element value="link" />
     <element value="caption" /></property>
  </widget>
  <widget id="link" type="String Widget">
    <property name="display_width">36</property>
    <property name="fields">
     <element value="link" /></property>
    <property name="is_i18n">True</property>
    <property name="label_edit">cpsportlets_image_link_label</property>
  </widget>
  <table>
    <row>
      <cell id="imagelink"/>
    </row>
  </table>
  <property name="layout_create_method"></property>
  <property name="layout_edit_method"></property>
  <property name="layout_view_method"></property>
  <property name="style_prefix">layout_portlet_</property>
  <property name="flexible_widgets"></property>
  <property name="validate_values_expr"></property>
</layout>
