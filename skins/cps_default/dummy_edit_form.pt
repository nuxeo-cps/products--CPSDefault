<tal:block define="doc here/getContent">
<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="here/main_template/macros/master">
<body>
<div metal:fill-slot="main">	  
<div class="Desktop">


<span tal:replace="request/message"
   tal:condition="request/message|nothing"><hr></span>

<div class="Dummy">

<h2>Edit <span tal:replace="here/getId">My ID</span></h2>

<form action="dummy_edit" method="post"
      tal:attributes="action string:${here/absolute_url}/dummy_edit"
>
<table class="FormLayout">

 <tr>
  <th> Title
  </th>
  <td> <span tal:replace="doc/Title">My Title</span> </td>
 </tr>

 <tr>
  <th class="TextField"> Description </th>
  <td class="TextField">
   <textarea name="description:text" rows="5" wrap="soft"  
             cols="65" tal:content="doc/Description"></textarea>
  </td>
 </tr>
 <tr>
  <th class="TextField"> Body
  </th>
  <td class="TextField">
   <textarea name="body:text" rows="10" cols="65" wrap="soft"
             tal:content="doc/body"></textarea>
  </td>
 </tr>

 <tr>
  <th> <br> 
  <td>
   <input type="submit" name="choice" value=" Change ">
   <input type="submit" name="choice" value=" Change and View ">
  </td>
 </tr>

</table>
</form>

</div>
</div>
</div>
</body>
</html>
</tal:block>